{
  "type": "object",
  "required": [
    "schema_version",
    "action_id",
    "action_type",
    "resource",
    "params",
    "principal",
    "agent",
    "environment",
    "context",
    "trace_id"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "enum": ["v1"]
    },
    "action_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[A-Za-z0-9][A-Za-z0-9._:-]{0,127}$"
    },
    "action_type": {
      "type": "string",
      "minLength": 1
    },
    "resource": {
      "type": "string",
      "minLength": 1
    },
    "params": {
      "type": "object"
    },
    "principal": {
      "type": "string",
      "minLength": 1
    },
    "agent": {
      "type": "string",
      "minLength": 1
    },
    "environment": {
      "type": "string",
      "minLength": 1
    },
    "context": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "extensions": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "trace_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[A-Za-z0-9][A-Za-z0-9._:-]{0,127}$"
    }
  }
}
